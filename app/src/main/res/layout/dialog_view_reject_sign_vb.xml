<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialog_dimen"
    >
   
    <TextView 
        android:id="@+id/tvDescriptionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dialog_msg_confirm_description_sign_approve"
        android:textColor="@color/black"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/tvQuestionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNumValidations"
        android:text="@string/dialog_msg_confirm_question_sign_approve"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvNumSigns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDescriptionView"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/icon_sign"
        android:drawableLeft="@drawable/icon_sign"
        android:drawablePadding="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvNumVB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNumSigns"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/icon_vb"
        android:drawableLeft="@drawable/icon_vb"
        android:drawablePadding="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvNumValidations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNumVB"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/icon_vb"
        android:drawableLeft="@drawable/icon_vb"
        android:drawablePadding="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black"
        android:visibility="gone" />


</RelativeLayout>