<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    
	<ImageView
		android:layout_width="match_parent" 
		android:layout_height="match_parent"
		android:src="@drawable/background" 
		android:scaleType="fitCenter" 
		android:contentDescription="@string/app_name"/>
		
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	   >
		
	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_marginTop="100dp"
	        android:layout_centerHorizontal="true"
	        android:layout_marginBottom="75dp"
	        android:contentDescription="@string/signfolder_logo"
	        android:src="@drawable/logo_portafirmas" />
	    
	    <TextView
	        android:id="@+id/presentationText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/imageView1"
	        android:layout_marginLeft="75dp"
	        android:layout_marginRight="75dp"
	        android:text="@string/label_presentation_text"
			android:textAppearance="?android:attr/textAppearanceLarge" />
	
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="75dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="75dp"
        	android:layout_marginRight="75dp" >

			<Button
				android:id="@+id/button_importar_cert"
				style="@style/ButtonText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:maxLines="2"
				android:minWidth="30dp"
				android:onClick="onClickImportCertButton"
				android:text="@string/button_import_cert" />

			<Button
				android:id="@+id/button_acceder"
				style="@style/ButtonText"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="0.5"
				android:maxLines="2"
				android:minWidth="30dp"
				android:onClick="onClickAccessButton"
				android:text="@string/button_login" />
        </LinearLayout>
	    
	</RelativeLayout>
</FrameLayout>